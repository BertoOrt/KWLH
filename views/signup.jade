extends layout

block content
  h1= title
  form.form-inline(action="/signup", method="post")
    label 
      h3 email
      input.form-control(type='text' name='email')
    label 
      h3 username
      input.form-control(type='text' name='username')
    label 
      h3 password
      input.form-control(type='password' name='password')
    input.btn.btn-default(type='submit' value='sign up')
      
