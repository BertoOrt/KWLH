extends ./../layout

block content
  table.table
    thead
      tr
        th Title 
        th Author
        if username
          th Options
    tbody
      each chart in charts
        if !chart.private
          tr
            td= chart.topic
            td= chart.username
            td
              if chart.username === username
                a.btn.btn-primary.btn-sm(href='/'+username+'/'+chart._id) Show
                a.btn.btn-success.btn-sm(href='/'+username+'/'+chart._id+'/edit') Edit
                form.delete-chart-form(action='/'+username+'/'+chart._id+'/delete' method='post')
                  input.delete-chart.btn.btn-danger.btn-sm(type='submit' value='Delete')
